# 将你的 Discord Bot Token 放在此处
DISCORD_TOKEN=

# 可选：设置 GUILD_ID（仅在你想只同步到特定服务器时）
# GUILD_ID=

# 认证 API 配置
AUTH_API_BASE=https://auth.hvhbbs.cc

# 验证通过时授予的角色名称（需与服务器角色同名）
AUTH_SUCCESS_ROLE=Verified
AUTH_UNVERIFIED_ROLE=Unverified

# 验证流程使用的频道名称（如果需要自动创建/查找）
AUTH_CHANNEL_NAME=auth-verify

# 是否限制 /auth login 只能在 AUTH_CHANNEL_NAME 里使用（true/false）
AUTH_LOGIN_CHANNEL_ONLY=true

# 是否在 setup 时让未验证角色看不到其它频道（true/false）
AUTH_HIDE_OTHER_CHANNELS=true

# 日志等级（DEBUG, INFO, WARNING, ERROR）
LOG_LEVEL=INFO

# 持久化文件（JSON 数据库存储验证状态）
AUTH_DATA_FILE=./data.json
